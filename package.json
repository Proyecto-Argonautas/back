{
    "name": "back",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "init": "tsc --init",
        "dev": "tsx watch server/index.ts",
        "build": "tsc",
        "format": "biome format --write server",
        "check": "biome check --write server",
        "lint": "oxlint",
        "lint:fix": "oxlint --fix",
        "lint:fix-suggestions": "oxlint --fix --fix-suggestions",
        "lint:fix-all": "oxlint --fix --fix-suggestions",
        "db:generate": "bunx @better-auth/cli@latest generate",
        "db:migrate": "bunx prisma migrate dev",
        "db:deploy": "bunx prisma migrate deploy",
        "db:studio": "bunx prisma studio --port 5555"
    },
    "devDependencies": {
        "@biomejs/biome": "2.1.2",
        "@types/express": "5.0.3",
        "oxlint": "1.7.0",
        "prisma": "6.12.0",
        "tsx": "4.20.3",
        "typescript": "5.8.3"
    },
    "peerDependencies": {
        "typescript": "5.8.3"
    },
    "dependencies": {
        "@prisma/client": "6.12.0",
        "@types/cors": "2.8.19",
        "better-auth": "1.3.2",
        "cors": "2.8.5",
        "dotenv": "17.2.0",
        "express": "5.1.0",
        "zod": "4.0.5"
    }
}